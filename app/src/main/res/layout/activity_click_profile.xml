<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="40dp"
    tools:context=".ClickProfileActivity">

    <ImageView
        android:id="@+id/image_view"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/name"
        android:text="Name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:textStyle="bold"
        android:layout_marginTop="30dp"
        android:layout_below="@id/image_view"/>

    <TextView
        android:id="@+id/type"
        android:text="Type:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:layout_marginTop="16dp"
        android:layout_below ="@id/name" />

    <TextView
        android:id="@+id/attack"
        android:text="Attack:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:layout_marginTop="16dp"
        android:layout_below="@id/type" />

    <TextView
        android:id="@+id/defense"
        android:text="Defense:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:layout_below="@id/attack"
        android:layout_marginTop="16dp"/>

    <TextView
        android:id="@+id/health"
        android:text="Health:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:layout_marginTop="16dp"
        android:layout_below="@id/defense" />

    <TextView
        android:id="@+id/spatk"
        android:text="Special Attack:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:layout_marginTop="16dp"
        android:layout_below="@id/health" />

    <TextView
        android:id="@+id/spdef"
        android:text="Special Defense:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:layout_marginTop="16dp"
        android:layout_below="@id/spatk" />

    <TextView
        android:id="@+id/sphp"
        android:text="Special Defense:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:layout_marginTop="16dp"
        android:layout_below="@id/spdef" />

    <TextView
        android:id="@+id/flavor"
        android:text="Flavor:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:layout_marginTop="16dp"
        android:layout_below="@id/sphp" />

    <TextView
        android:id="@+id/species"
        android:text="Species:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:layout_marginTop="16dp"
        android:layout_below="@id/flavor" />

    <TextView
        android:id="@+id/total"
        android:text="Total:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:layout_marginTop="16dp"
        android:layout_below="@id/species" />
</RelativeLayout>